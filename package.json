{
  "name": "web-components",
  "version": "1.0.0",
  "description": "Collection of UI components for mobile and web",
  "license": "ISC",
  "author": "Objekt Labs",
  "homepage": "https://github.com/objektlabs/web-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/objektlabs/web-components.git"
  },
  "bugs": {
    "url": "https://github.com/objektlabs/web-components/issues"
  },
  "scripts": {
    "clean": "npx rimraf docs",
    "build": "npm run clean && npm run build --workspaces",
    "docs": "npm run build && npm run docs:readme && npm run docs:storybook && npx cpy ./custom-elements.json ./docs",
    "docs:readme": "npm run docs --workspaces",
    "docs:storybook": "npx build-storybook --output-dir=docs",
    "test": "npm run test --workspaces",
    "serve": "wds --config=./.storybook/server.mjs --watch",
    "storybook": "tsc --build tsconfig.project.json && concurrently -k -r \"tsc --build tsconfig.project.json --watch --preserveWatchOutput\" \"wds --config=./.storybook/server.mjs --watch\"",
    "analyze": "npx cem analyze --litelement --globs packages/*/components/*"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@web/dev-server": "^0.1.30",
    "@web/dev-server-storybook": "^0.4.3",
    "concurrently": "^7.1.0",
    "cpy-cli": "^4.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "workspaces": [
    "packages/button",
    "packages/text-field"
  ],
  "customElements": "custom-elements.json"
}
